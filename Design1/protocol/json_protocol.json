{
  "protocolVersion": 1,
  "description": "Simple client-server chat application JSON wire protocol",
  "actions": {
    "createAccount": {
      "request": {
        "requestId": "<string>",
        "action": "createAccount",
        "data": {
          "username": "<string>",
          "passwordHash": "<string>"
        }
      },
      "successResponse": {
        "requestId": "<string>",
        "status": "ok",
        "msg": "Account created successfully.",
        "data": {}
      },
      "errorResponse": {
        "requestId": "<string>",
        "status": "error",
        "msg": "An account with that username already exists.",
        "data": {}
      }
    },
    "login": {
      "request": {
        "requestId": "<string>",
        "action": "login",
        "data": {
          "username": "<string>",
          "passwordHash": "<string>"
        }
      },
      "successResponse": {
        "requestId": "<string>",
        "status": "ok",
        "msg": "Login successful.",
        "data": {
          "inboxCount": "<integer>",
          "old_msgs": [
            "<string>",
            "<string>"
          ],
          "inbox_msgs": [
            "<string>",
            "<string>"
          ],
          "drafts": [
            "<string>",
            "<string>"
          ]
        }
      },
      "errorResponse": {
        "requestId": "<string>",
        "status": "error",
        "msg": "Invalid credentials.",
        "data": {}
      }
    },
    "listAccounts": {
      "request": {
        "requestId": "<string>",
        "action": "listAccounts",
        "data": {}
      },
      "successResponse": {
        "requestId": "<string>",
        "status": "ok",
        "msg": "",
        "data": {
          "accounts_users": [
            "<string>",
            "<string>"
          ],
          "totalCount": "<integer>"
        }
      },
      "errorResponse": {
        "requestId": "<string>",
        "status": "error",
        "msg": "Not authenticated or other error.",
        "data": {}
      }
    },
    "sendMessage": {
      "request": {
        "requestId": "<string>",
        "action": "sendMessage",
        "data": {
          "user": "<string>",
          "sender": "<string>",
          "content": "<string>"
        }
      },
      "successResponse": {
        "requestId": "<string>",
        "status": "ok",
        "msg": "Message sent (and delivered/stored).",
        "data": {}
      },
      "errorResponse": {
        "requestId": "<string>",
        "status": "error",
        "msg": "Recipient does not exist or other error.",
        "data": {}
      }
    },
    "saveDrafts": {
      "request": {
        "requestId": "<string>",
        "action": "saveDraft",
        "data": {
          "user": "<string>",
          "drafts": [
            {
              "recipient": "<string>",
              "content": "<string>"
            }
          ]
        }
      },
      "successResponse": {
        "requestId": "<string>",
        "status": "ok",
        "msg": "Draft saved.",
        "data": {}
      },
      "errorResponse": {
        "requestId": "<string>",
        "status": "error",
        "msg": "Cannot save draft or other error.",
        "data": {}
      }
    },
    "checkMessage": {
      "request": {
        "requestId": "<string>",
        "action": "checkMessage",
        "data": {
          "username": "<string>",
          "msgId": "<integer>"
        }
      },
      "successResponse": {
        "requestId": "<string>",
        "status": "ok",
        "msg": "Message checked as read.",
        "data": {}
      },
      "errorResponse": {
        "requestId": "<string>",
        "status": "error",
        "msg": "Message unable to read or other error.",
        "data": {}
      }
    },
    "downloadMessage": {
      "request": {
        "requestId": "<string>",
        "action": "downloadMessage",
        "data": {
          "username": "<string>",
          "msgId": "<integer>"
        }
      },
      "successResponse": {
        "requestId": "<string>",
        "status": "ok",
        "msg": "Message downloaded from inbox.",
        "data": {}
      },
      "errorResponse": {
        "requestId": "<string>",
        "status": "error",
        "msg": "Message unable to download or other error.",
        "data": {}
      }
    },
    "deleteMessage": {
      "request": {
        "requestId": "<string>",
        "action": "deleteMessage",
        "data": {
          "username": "<string>",
          "msgId": "<integer>"
        }
      },
      "successResponse": {
        "requestId": "<string>",
        "status": "ok",
        "msg": "Message deleted.",
        "data": {}
      },
      "errorResponse": {
        "requestId": "<string>",
        "status": "error",
        "msg": "Not authorized to delete or other error.",
        "data": {}
      }
    },
    "deleteAccount": {
      "request": {
        "requestId": "<string>",
        "action": "deleteAccount",
        "data": {
          "username": "<string>",
          "passwordHash": "<string>"
        }
      },
      "successResponse": {
        "requestId": "<string>",
        "status": "ok",
        "msg": "Account and all messages have been deleted.",
        "data": {}
      },
      "errorResponse": {
        "requestId": "<string>",
        "status": "error",
        "msg": "Invalid credentials or other error.",
        "data": {}
      }
    },
    "logout": {
      "request": {
        "requestId": "<string>",
        "action": "logout",
        "data": {
          "username": "<string>"
        }
      },
      "successResponse": {
        "requestId": "<string>",
        "status": "ok",
        "msg": "Logged out successfully.",
        "data": {}
      },
      "errorResponse": {
        "requestId": "<string>",
        "status": "error",
        "msg": "Not logged in or other error.",
        "data": {}
      }
    }
  }
}
